#!/usr/bin/env zsh

volume_high=
volume_low=
volume_off=
volume_muted=

{
    read -r value
    read -r mute
} <<< "$(source $HOME/.dotfiles/i3/get-volume)"

if [ "$mute" = "yes" ]
then
  echo "$volume_muted"
elif [[ $value -eq 0 ]]
then
  echo "$volume_off $value%"
elif [[ $value -lt 50 ]]
then
  echo "$volume_low $value%"
else
  echo "$volume_high $value%"
fi

