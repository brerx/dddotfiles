# Query my default IP address only on startup
#[ip]
#command=hostname -i | awk '{ print "IP:" $1 }'
#interval=once
#color=#91E78B

[brightness]
label=
command=echo $((10**2 * $(brightnessctl g)/$(brightnessctl m)))%
color=#c13156
interval=once
signal=10


# Update time every 5 seconds
[time]
command=date +%T
interval=5


