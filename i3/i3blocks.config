[time]
website=https://calendar.google.com/
format=%a %d.%m. %H:%M
command=[ $button ] && xdg-open "$website" || date +"$format"
interval=5

[disk]
command=$HOME/.dotfiles/i3/disk
interval=30

[battery]
command=$HOME/.dotfiles/i3/battery
markup=pango
interval=1
separator=false

[spacer]
full_text=" "

