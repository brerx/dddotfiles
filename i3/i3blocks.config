[brightness]
label=
command=echo $((10**2 * $(brightnessctl g)/$(brightnessctl m)))%
color=#aaaaaa
interval=once
signal=10


# Update time every 5 seconds
[time]
command=date +'%a %d.%m. %H:%M'
interval=5

[battery]
command=/home/thomas/.dotfiles/tmux/battery-display.zsh linux
interval=1


