general {
  output_format = "i3bar"
  interval = 5
  colors = true
  #color_good      = 'WIP'
  #color_degraded  = 'WIP'
  #color_bad       = 'WIP'
}

order += "volume master"
order += "disk /"
order += "wireless wlp0s20f3"
order += "ethernet enp0s31f6"
order += "battery 0"
order += "cpu_temperature 0"
order += "tztime local"

volume master {
        format = "V: %volume"
        format_muted = "V: muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

wireless wlp0s20f3 {
        format_up = "W: (%quality at %essid, %bitrate)"
        format_down = "W: -"
}

ethernet enp0s31f6 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "E: -"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 15
}

tztime local {
        format = "%a %d.%m. %H:%M"
}

cpu_temperature 0 {
        format = "T: %degrees Â°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon9/temp1_input"
}

disk "/" {
        format = "%avail"
}
